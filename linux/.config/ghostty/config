#keybind = alt+shift+ctrl+equal=increase_font_size
keybind = alt+shift+ctrl+backspace=reset_font_size
keybind = alt+shift+ctrl+e=open_config
keybind = alt+shift+ctrl+r=reload_config

# quick terminal
keybind = shift+ctrl+slash=toggle_quick_terminal

# splits
keybind = shift+ctrl+h=goto_split:previous
keybind = shift+ctrl+l=goto_split:next
keybind = shift+ctrl+z=toggle_split_zoom
keybind = alt+ctrl+h=resize_split:left,10
keybind = alt+ctrl+j=resize_split:down,10
keybind = alt+ctrl+k=resize_split:up,10
keybind = alt+ctrl+l=resize_split:right,10
keybind = alt+ctrl+equal=equalize_splits

# tabs
keybind = shift+ctrl+j=previous_tab
keybind = shift+ctrl+k=next_tab
keybind = alt+shift+ctrl+j=move_tab:-1
keybind = alt+shift+ctrl+k=move_tab:1
keybind = alt+shift+ctrl+s=toggle_tab_overview
